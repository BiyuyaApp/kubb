{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "es",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ],
    "paths": {
      "@kubb/core":["../core/src/index.ts"],
      "@kubb/swagger":["../swagger/src/index.ts"],
      "@kubb/swagger-ts":["../swagger-ts/src/index.ts"],
      "@kubb/swagger-zod":["../swagger-zod/src/index.ts"],
      "@kubb/ts-codegen":["../ts-codegen/src/index.ts"],
      "@kubb/swagger-client":["../swagger-client/src/index.ts"],
      "@kubb/swagger-react-query":["../swagger-react-query/src/index.ts"]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "**/node_modules",
    "**/types/**",
    "**/*.test.ts"
  ]
}
