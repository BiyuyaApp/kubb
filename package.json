{
  "name": "kubb",
  "version": "1.0.0",
  "private": true,
  "description": "Kubb monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/kubb-project/kubb.git"
  },
  "license": "MIT",
  "author": "Stijn Van Hulle <stijn@stijnvanhulle.be",
  "workspaces": {
    "packages": [
      "packages/**",
      "docs/**",
      "examples/**",
      "e2e/**"
    ]
  },
  "scripts": {
    "build": "turbo run build --filter='./packages/*'",
    "generate": "turbo run generate",
    "start": "turbo run start --filter='./packages/*'",
    "graph": "nx graph ",
    "lint": "eslint packages/**/*.ts",
    "lint-fix": "eslint packages/**/*.ts --quiet --fix",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "pre-commit": "turbo run pre-commit && pnpm run lint-fix",
    "pre-push": "turbo run pre-push",
    "release": "turbo run release",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@swc/core": "^1.3.61",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vitest/coverage-c8": "^0.31.4",
    "@vitest/ui": "^0.31.4",
    "assert": "^2.0.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.42.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-formatjs": "^4.10.1",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "eslint-plugin-vitest": "^0.2.5",
    "eslint-plugin-vitest-globals": "^1.3.1",
    "husky": "^8.0.3",
    "nx": "^16.3.2",
    "prettier": "^2.8.8",
    "prettier-eslint": "^15.0.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.1",
    "typescript": "~5.0.4",
    "vitest": "^0.31.4"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">=8"
  }
}
