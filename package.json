{
  "name": "kubb",
  "version": "1.0.0",
  "private": true,
  "description": "Kubb monorepo",
  "repository": {
    "type": "git",
    "url": "https://github.com/kubb-project/kubb.git"
  },
  "license": "MIT",
  "author": "Stijn Van Hulle <stijn@stijnvanhulle.be",
  "workspaces": {
    "packages": [
      "packages/**",
      "docs/**",
      "examples/**",
      "e2e/**"
    ]
  },
  "scripts": {
    "build": "turbo run build --filter='./packages/*'",
    "generate": "turbo run generate && pnpm format",
    "start": "turbo run start --filter='./packages/*'",
    "graph": "nx graph ",
    "lint": "turbo run lint",
    "lint-fix": "turbo run lint-fix",
    "lint:case": "npx case-police --fix",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "release": "turbo run release --continue",
    "upgrade": "turbo run upgrade",
    "test": "vitest --coverage",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "turbo run typecheck --filter='./packages/*' --filter='./examples/*'"
  },
  "devDependencies": {
    "@swc/core": "^1.3.62",
    "@types/node": "^20.2.5",
    "@vitest/coverage-v8": "^0.32.0",
    "@vitest/ui": "^0.32.0",
    "crypto-browserify": "^3.12.0",
    "@kubb/eslint-config": "workspace:*",
    "@ianvs/prettier-plugin-sort-imports": "^4.0.2",
    "nx": "^16.3.2",
    "prettier": "^2.8.8",
    "prettier-eslint": "^15.0.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.10.2",
    "typescript": "~5.1.3",
    "vitest": "^0.32.0"
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8.3.0"
  },
  "packageManager": "pnpm@8.3.0"
}
