{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "separate-pull-requests": false,
  "group-pull-request-title-pattern": "chore: releasing Kubb ${version}",
  "pull-request-title-pattern": "chore${scope}: release${component} ${version}",
  "changelog-sections": [
    { "type": "feat", "section": "‚ú® Features" },
    { "type": "feature", "section": "‚ú® Features" },
    { "type": "fix", "section": "üêû Bug Fixes" },
    { "type": "perf", "section": "üöÄ Performance Improvements" },
    { "type": "revert", "section": "Reverts" },
    { "type": "docs", "section": "üìö Documentation" },
    { "type": "style", "section": "Styles", "hidden": true },
    { "type": "chore", "section": "üì¶ Miscellaneous Chores", "hidden": true },
    { "type": "refactor", "section": "Code Refactoring", "hidden": true },
    { "type": "test", "section": "Tests", "hidden": true },
    { "type": "ci", "section": "Continuous Integration", "hidden": true }
  ],
  "draft": false,
  "prerelease": false,
  "packages": {
    "packages/kubb": {
      "component": "kubb",
      "changelog-path": "CHANGELOG.md",
      "release-type": "node",
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false
    },
    "packages/core": {
      "component": "@kubb/core",
      "changelog-path": "CHANGELOG.md",
      "release-type": "node",
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false
    },
    "packages/cli": {
      "component": "@kubb/cli",
      "changelog-path": "CHANGELOG.md",
      "release-type": "node",
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false
    },
    "packages/ts-codegen": {
      "component": "@kubb/ts-codegen",
      "changelog-path": "CHANGELOG.md",
      "release-type": "node",
      "bump-minor-pre-major": false,
      "bump-patch-for-minor-pre-major": false
    },
    "packages/swagger": {
