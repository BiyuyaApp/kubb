{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16", 
    "moduleResolution": "node16",
    "strict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "outDir": "es",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["vitest/globals"],
    "paths": {
      "@kubb/ts-codegen": ["../ts-codegen/src/index.ts"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "**/node_modules",
    "**/types/**"
  ]
}