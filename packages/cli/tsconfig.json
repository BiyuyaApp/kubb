{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext", 
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true,
    "outDir": "es",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "types": ["vitest/globals"],
    "paths": {
      "@kubb/core":["../core/src/index.ts"],
      "@kubb/core/browser":["../core/dist/browser/index.js"],
      "@kubb/swagger":["../swagger/src/index.ts"],
      "@kubb/swagger-ts":["../swagger-ts/src/index.ts"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "**/node_modules",
    "**/types/**",
    "**/mocks/**"
  ]
}